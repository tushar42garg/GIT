<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.example.git.data.remote.domain.Repository" />

        <variable
            name="vm"
            type="com.example.git.ui.search.SearchViewModel" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{item.name}" />

                <TextView
                    android:id="@+id/linkProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROJECT LINK" />

                <TextView
                    android:id="@+id/watcherCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WATCHERS COUNT" />


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>
